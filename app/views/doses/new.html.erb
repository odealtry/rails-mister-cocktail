<%= form_for([ @cocktail, @dose ]) do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit "Submit dose", class: "btn btn-primary" %>
  <%= f.label :ingredient %>
  <%= f.select :ingredient_id, options_from_collection_for_select(Ingredient.all, :id, :name), :prompt => "Select an ingredient"%>
<% end %>
